generator client {
  provider      = "prisma-client-js"
  output        = "../../../node_modules/@prisma/client-uniswap"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATA_ANALYSIS_DATABASE_URL")
}

model Factory {
  address              String   @id
  version              Version
  swapSignature        String
  poolCreatedSignature String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  poolAddress          Pool[]
}

model Pool {
  poolAddress    String   @id
  factory        Factory  @relation(fields: [factoryAddress], references: [address])
  factoryAddress String
  token0         String
  token1         String
  deployedAt     DateTime
  swaps          Swap[]
}

model Swap {
  id              String   @id
  pool            Pool     @relation(fields: [poolAddress], references: [poolAddress])
  poolAddress     String
  transactionHash String
  sender          String
  recipient       String
  amountIn        String
  amountOut       String
  reversed        Boolean
  timestamp       DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Version {
  V2
  V3
}
